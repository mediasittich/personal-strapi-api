{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "screenshot": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "github": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "tag": {
      "type": "component",
      "repeatable": true,
      "component": "description.tag"
    },
    "category": {
      "model": "category",
      "via": "projects"
    },
    "summary": {
      "type": "text",
      "required": true
    }
  }
}
